{{!
    @template qbank_questiongen/loading

    Template which defines the data shown when question are ready.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "courseid": 2,
        "cmid": 124,
        "cron": "0"
    }
}}
{{> qbank_questiongen/intro }}

{{#cron}}
    <div class="alert-warning">
        {{#str}}cronoverdue, qbank_questiongen{{/str}}
    </div>
{{/cron}}

<div id="qbank_questiongen_progress">
    {{{progressbar}}}
</div>

<div id="ai_manager_warningbox"></div>

<p class="d-flex mt-5">
    <a id="localaiquestions_backtocourse" class="btn btn-primary m-1" href="{{config.wwwroot}}/course/view.php?id={{courseid}}">
        {{#str}}backtocourse, qbank_questiongen{{/str}}
    </a>
    <a id="qbank_questiongen_gotoquestionbank" class="btn btn-secondary m-1" href="{{config.wwwroot}}/question/edit.php?cmid={{cmid}}">
        {{#str}}gotoquestionbank, qbank_questiongen{{/str}}
    </a>
    <a id="qbank_questiongen_generatemore" class="btn btn-secondary m-1" href="{{config.wwwroot}}/question/bank/questiongen/story.php?cmid={{cmid}}">
        {{#str}}generatemore, qbank_questiongen{{/str}}
    </a>
</p>
